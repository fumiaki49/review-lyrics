.app-title Review Lyric
= render "shared/side-bar"

.main-container
  .postted-lyric
    .postted-lyric__list
      -@posts.each do |post|
        %ul.postted-lyric__list__label
          .user-icon
            %li.user-icon__image
              = image_tag(post.user.image.url, width: 50, height: 50)
            %li.user-icon__name
              = post.user.nickname
          .postted-lyric__list__song
            = post.song
          .postted-lyric__list__song__lyric
            = post.lyric
